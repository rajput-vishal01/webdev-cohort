generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  // this url is picked by cli of prisma but the db url for connectionn pooling (accelerate url)
  // needs to be added in worker using..npx wrangler secret put DATABASE_URL
  url      = env("DATABASE_URL")
}


model User {
  id  Int    @id @default(autoincrement())
  name    String?
  username String @unique
  password String
 
}

model Blog {
  id  Int    @id @default(autoincrement())
  authorId   Int
  content    String
  title       String
  published Boolean  @default(false)

}