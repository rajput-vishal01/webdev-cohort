generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//all this will automatically gets converted into sql queries
model User{
  id Int @id @default(autoincrement())
  email String @unique
  firstname String
  lastname String?
  password String
}

model Todo{
  id Int @id @default(autoincrement())
  title String 
  done Boolean
  desc String
}